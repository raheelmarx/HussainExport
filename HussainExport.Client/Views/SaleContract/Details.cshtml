@model HussainExport.Client.Models.SaleContractVM

@{
    ViewData["Title"] = "Sale Contract Details";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> @ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">


                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@ViewData["Title"]</h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SaleContractNumber)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SaleContractNumber)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.TotalAmount)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.TotalAmount)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DeliveryTime)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DeliveryTime)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ShipmentDetails)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ShipmentDetails)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Packing)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Packing)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                          
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Currency)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Currency.CurrencyId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Customer)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Customer.CustomerId)
                            </dd>
                        </dl>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-sm-right">
                            <p>
                                <a asp-action="Edit"  class="btn btn-block btn-primary" asp-route-id="@Model.SaleContractId">Edit</a> 
                                <a asp-action="Index" class="btn btn-block btn-primary">Back to List</a>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
