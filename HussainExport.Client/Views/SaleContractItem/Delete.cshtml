@model HussainExport.Client.Models.SaleContractItemVM

@{
    ViewData["Title"] = "Delete Sale Contract Item";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> @ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">


                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@ViewData["Title"]</h3>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.Label("Quality")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Quality)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Article")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Article)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Color")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Color)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Size")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Size)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Price")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Price)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Quantity")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Quantity)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Amount")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Amount)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("IsActive")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IsActive)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Added Date")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DateAdded)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Updated Date")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DateUpdated)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Sale Contract")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SaleContract.SaleContractId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.Label("Unit")
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Unit.UnitId)
                            </dd>
                        </dl>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-sm-right">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="SaleContractId" />
                                <input type="submit" value="Delete" class="btn btn-block btn-danger" />
                                <a asp-action="Index" class="btn btn-block btn-primary">Back to List</a>
                            </form>

                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
